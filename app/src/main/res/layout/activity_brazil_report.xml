<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.covidreports.brazil.BrazilReportActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    app:cardElevation="10dp"
    app:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--        <ImageView-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="0dp"-->
        <!--            app:layout_constraintTop_toTopOf="parent"-->
        <!--            app:layout_constraintLeft_toLeftOf="parent"-->
        <!--            app:layout_constraintRight_toRightOf="parent"-->
        <!--            android:id="@+id/blog_image"-->
        <!--            android:padding="0dp"-->
        <!--            android:layout_margin="0dp"-->
        <!--            android:adjustViewBounds="true"-->
        <!--            android:scaleType="fitXY"-->
        <!--            />-->

        <LinearLayout
            android:id="@+id/container3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="parent">

            <TextView
                android:id="@+id/brazilTotalNumberOfCases"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number of Confirmed Cases"
                android:textColor="#000"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/brazilTotalConfirmedCases"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number of Confirmed Cases"
                android:textColor="#000"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/brazilTotalRecoveredNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number of Recovered"
                android:textColor="#F44336"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/brazilTotalOfDeaths"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number of Deaths"
                android:textColor="#000"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/brazilReportUpdateDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Date"
                android:textColor="#009688"
                android:textSize="19sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>