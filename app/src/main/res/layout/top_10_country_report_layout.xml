<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    app:cardElevation="10dp"
    app:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--        <ImageView-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="0dp"-->
        <!--            app:layout_constraintTop_toTopOf="parent"-->
        <!--            app:layout_constraintLeft_toLeftOf="parent"-->
        <!--            app:layout_constraintRight_toRightOf="parent"-->
        <!--            android:id="@+id/blog_image"-->
        <!--            android:padding="0dp"-->
        <!--            android:layout_margin="0dp"-->
        <!--            android:adjustViewBounds="true"-->
        <!--            android:scaleType="fitXY"-->
        <!--            />-->

        <LinearLayout
            android:id="@+id/top10RankContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="parent">

            <TextView
                android:id="@+id/top10RankingPosition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ranking Position"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/top10CountryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Country Name"
                android:textAlignment="center"
                android:textColor="#2196F3"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/top10Cases"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number of Cases"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/top10Confirmed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number of Confirmed Cases"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/top10Recovered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number of Recovered"
                android:textAlignment="center"
                android:textColor="#009688"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/top10Deaths"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number of deaths"
                android:textAlignment="center"
                android:textColor="#F44336"
                android:textSize="19sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>